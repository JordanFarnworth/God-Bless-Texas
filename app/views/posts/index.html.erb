<div class="container" id="posts">
  <% @posts.each do |post| %>
    <div class="row well index-post-div" id="post-<%= post.id %>">
      <div class="col-md-6">
        <h1>  <%= link_to post.title, post_path(post) %></h1>
        <h4>  <%= post.description %></h4>
        <p>Submitted on:  <%= post.created_at %></p>
        <p>Number of comments:  <%= post.comments.count %></p>
        <p>Total Favorites:  <%= post.favorites.count %></p>
        <em>Submitted by: <%= link_to post.user.username, user_path(post.user) %></em>
      </div>

      <div class="col-md-6">
        <%= image_tag post.post_image.url(:main) %>
        <% if @current_user.admin? %>
        <div class="user-admin-buttons">
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-info" %>
          <%= link_to 'Delete', post_path(post), method: :delete, class: "btn btn-warning" %>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
