<div class="container" id="posts">
  <% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-2">
      <div class="btn-group-vertical" role="group" aria-label="...">
        <%= link_to 'Approve Post', approve_post_path(post.id), method: :put, class: "btn btn-info" %>
        <%= link_to 'Deny Post', deny_post_path(post.id), method: :put, class: "btn btn-default" %>
      </div>
    </div>

    <div class="row well index-post-div" id="post-<%= post.id %>">
      <div class="col-md-5">
        <h1>  <%= link_to post.title, post_path(post) %></h1>
        <h4>  <%= post.description %></h4>
        <p>Submitted on:  <%= post.created_at %></p>
        <em>Submitted by: <%= link_to post.user.username, user_path(post.user) %></em>
      </div>

      <div class="col-md-5">
        <%= image_tag post.post_image.url(:main) %>
      </div>
    </div>
  <% end %>
  </div>
  <% else %>

  <div class="container">
   <div class="row">
     <div class="col-md-6 col-md-offset-3 ">
       <h1 class="col-md-offset-2 approve-title">No Posts</h1>
       <%= image_tag 'logo5.png', class: 'col-md-offset-2 approve-logo' %>
     </div>
   </div>
  </div>


  <% end %>
</div>
