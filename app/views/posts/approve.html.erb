<div class="container" id="posts">
  <% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-2">
      <div class="btn-group-vertical" role="group" aria-label="...">
        <%= link_to 'Approve Post', post_approve_path(post.id), method: :put, class: "btn btn-info" %>
        <%= link_to 'Deny Post', post_deny_path(post.id), method: :put, class: "btn btn-default" %>
      </div>
    </div>

    <div class="row well index-post-div" id="post-<%= post.id %>">
      <div class="col-md-5">
        <h1>  <%= link_to post.title, post_path(post) %></h1>
        <h4>  <%= post.description %></h4>
        <p>Submitted on:  <%= post.created_at %></p>
        <em>Submitted by: <%= link_to post.user.username, user_path(post.user) %></em>
      </div>

      <div class="col-md-5">
        <%= image_tag post.post_image.url(:main) %>
      </div>
    </div>
  <% end %>
  </div>
  <% else %>
  <h1>No posts to approve/deny!</h1>
  <% end %>
</div>
