<div class="container">
  <div class="row col-md-offset-2">
    <h1 class="title-h1">Share the Texas Love</h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <%= bootstrap_form_for(@post) do |f| %>
        <%= f.text_field :title %>
        <%= f.text_field :description %>
        <%= f.file_field :post_image %>
        <%= f.submit "Submit Post", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
  <div class="row col-md-offset-4">
    <%= image_tag "logo5.png", class: "new-post-logo animate bounceInUp" %>
  </div>

</div>
