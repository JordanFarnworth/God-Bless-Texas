<div class="background">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="main-login-text">
          <h1>God Bless Texas</h1>
        </div>
      </div>
      <div class="col-md-6 veil col-md-offset-3 login-form">
        <div class="veil-container">
          <div class="logo">
          <%= image_tag "logo5.png"  %>
          </div>
          <div class="fields">
            <%= bootstrap_form_for(@user) do |f| %>
              <%= f.text_field :email %>
              <%= f.text_field :username %>
              <%= f.password_field :password %>
              <%= f.file_field :avatar, as: :file %>
              <%= f.submit "Sign Up!" , class: 'Sign in', class: 'btn btn-info btn-info btn-block'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
